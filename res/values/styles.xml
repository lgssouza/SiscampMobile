<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="TextoVerde">
        <item name="android:textColor">#006400</item>
    </style>

    <style name="BotaoDash">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FormatLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BotaoDescricao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Nomenclatura">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_large</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>